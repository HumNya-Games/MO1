<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 위치 접근 권한 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 오버레이 권한 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- 음성 인식 권한 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- 알림 권한 (Android 13 이상) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 포그라운드 서비스 권한 (Android 9 이상) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- 위치 기반 포그라운드 서비스 권한 (Android 14 이상) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HanbangReportNative"
        tools:targetApi="31">

        <activity
            android:name=".LogoActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TitleActivity" />
        <activity android:name=".MainActivity" android:exported="true" />
        <activity android:name=".ReportListActivity" />
        <activity android:name=".SpeechSettingActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".PermissionGuideActivity" />

        <service
            android:name=".FloatingBallService"
            android:exported="false"
            android:enabled="true"
            android:foregroundServiceType="location" />

    </application>

</manifest>
