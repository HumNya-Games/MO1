<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- 상하 28.5% Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.44" />

    <!-- 운행 시작 버튼(원형 이미지) - 화면 상단부 중앙보다 살짝 아래에 배치, 반응형 -->
    <ImageView
        android:id="@+id/driving_circle"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:contentDescription="운행 시작 원형"
        android:src="@drawable/driving_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.27" />

    <!-- 안내문구 -->

    <TextView
        android:id="@+id/report_status_guide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="자세한 사항을 확인 하시려면 리스트를 선택하세요."
        android:textColor="#CCCCCC"
        android:textSize="17sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="27dp"
        android:layout_marginHorizontal="24dp" />

    <!-- 신고 현황 카드+리스트를 안내문구 위에 고정 -->
    <LinearLayout
        android:id="@+id/report_status_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/report_status_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="24dp">

        <!-- 현재 신고 현황 카드 -->
        <LinearLayout
            android:id="@+id/report_status_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/main_bar1"
            android:padding="16dp">

            <TextView
                android:id="@+id/report_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 신고 현황"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/report_status_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 452건의 신고 처리 완료"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- 신고 상태 리스트 -->
        <LinearLayout
            android:id="@+id/report_status_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_marginTop="8dp">

            <!-- 접수 중 -->
            <LinearLayout
                android:id="@+id/in_progress_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/main_bar2"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="17dp">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_in_progress" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="접수 중"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15건"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 처리 완료 -->
            <LinearLayout
                android:id="@+id/completed_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/main_bar2"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="17dp">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_completed" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="처리 완료"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15건"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 반려 신고 -->
            <LinearLayout
                android:id="@+id/rejected_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/main_bar2"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="17dp">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_rejected" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="반려 신고"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3건"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 하단 네비게이션 바 -->
    <com.example.hanbangreportnative.BottomNavBar
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
