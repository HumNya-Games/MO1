<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- 상태바/노치 여백 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:background="#000000" />

    <!-- 상단 영역: 백버튼 + 탭 그룹 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000000">

        <!-- 백버튼 (탭 배경 밖, margin 조절 가능) -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/back_botton"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <!-- 상단 탭 그룹 (백버튼과 화면 우측의 중간 지점에 배치) -->
        <LinearLayout
            android:id="@+id/tab_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:id="@+id/tab_waiting"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="신고 대기"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/tab_completed"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="신고 완료"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 리스트 영역 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 리스트 뷰 -->
        <ListView
            android:id="@+id/report_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            android:padding="17dp"
            android:clipToPadding="false"
            android:background="#000000" />

        <!-- 데이터 없음 안내 -->
        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="신고 리스트가 없습니다."
            android:textSize="27sp"
            android:textColor="#CCCCCC"
            android:background="#000000"
            android:visibility="gone" />

    </FrameLayout>

    <!-- 하단 편집 버튼 영역 (FrameLayout으로 감싸서 마진 적용) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/layout_edit_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/report_list_bottom_botton_bg"
            android:padding="12dp">

            <!-- 모두 선택/전체 해제 버튼 (크기 조절 가능) -->
            <Button
                android:id="@+id/btn_select_all"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="모두 선택"
                android:textSize="17sp"
                android:background="@drawable/sellect_all_botton3"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <!-- 대기로 이동 버튼 (크기 조절 가능) -->
            <Button
                android:id="@+id/btn_move_to_waiting"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="대기로 이동"
                android:textSize="17sp"
                android:background="@drawable/sellect_all_botton4"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="17dp" />

            <!-- 선택 삭제 버튼 (크기 조절 가능) -->
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="선택 삭제"
                android:textSize="17sp"
                android:background="@drawable/sellect_all_botton5"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </FrameLayout>

    <!-- 하단 네비게이션과의 간격 (조절 가능) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="9dp" />

    <com.example.hanbangreportnative.BottomNavBar
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#000000" />

</LinearLayout>
